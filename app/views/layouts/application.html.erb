<!DOCTYPE html>
<html>
	<head>
	  <title>One Month Rails</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<%= render 'layouts/header' %>
		 
		<div class="container">
			<% flash.each do |name, msg| %>
			s: "alert alert-#{name}")
			<% end %>
			<%= yield %>
		</div>
		
		<%= render 'layouts/footer'%>
		
	</body>
</html>
